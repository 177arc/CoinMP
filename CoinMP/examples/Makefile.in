CoinDir  := ../..
#CoinMPDir := ..


CXX      := g++
CXXFLAGS := -g

IncDir	:= $(CoinDir)/include 
#IncDir	+= $(CoinMPDir)/include 

LIBDIRS := $(CoinDir)/lib
LIBDIRS += $(FlopcDir)/lib

LIBS	:= -lCoinMP
